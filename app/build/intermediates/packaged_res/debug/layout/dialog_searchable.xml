<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="20dp">
    <TextView
        android:id="@+id/tv_description_of_searchable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:text="@string/text_of_description_the_searchable"/>

    <EditText
        android:id="@+id/et_search_of_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/text_et_search_of_list"
        android:minHeight="48dp" />

    <ProgressBar
        android:id="@+id/pb_dialog"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progress_background"
        android:visibility="invisible"
        android:layout_gravity="center|center"/>
    <Button
        android:id="@+id/bt_reload_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_bt_reload_dialog"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/lv_of_searchable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>